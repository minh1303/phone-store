extends layout.pug 

block content 
    form(action="" method="post")
        label(for="name") Name: 
            input(type="text" id="name" name="name" value= category ? category.name : "")
        label(for="description") Description: 
            input(type="text" id="description" name="description" value= category? category.description : "")
        if state === "updating" 
            label(for="secretpassword") Secret Password: 
                input(type="password" name="secretpassword" required="true")
        if errors
            each error in errors 
                p(style="color: red")=error.msg
        input(type="submit")
